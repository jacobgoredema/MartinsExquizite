@model MartinsExquizite.Web.ViewModels.CategoriesListingVm

@if (Model!=null&&Model.Categories!=null&&Model.Categories.Count>0)
{
    <table class="table table-hover table-striped">
        <thead class="thead-light">
            <tr>
                <th>Name</th>
                <th>Parent Category</th>
                <th>Description</th>
                <th>Products</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model.Categories)
            {
                <tr>
                    <td>
                        @if (category.isFeatured)
	                    {
		                    <i class="text-warning fas fa-star m-1" title="Feaured Category"></i>
	                    }
                        @category.Name
                    </td>
                    <td>
                        @(category.ParentCategory!=null?category.ParentCategory.Name:"-")
                    </td>
                    <td>@category.Description</td>
                    <td>
                        <a href="@Url.Projects(categoryId:category.Id)" role="button" target="_blank" class="link">
                            @category.Projects.Count()
                        </a>
                    </td>
                    <td>
                        <div class="btn-group" role="group" aria-label="Basic example">
                            <a href="@Url.EditAction("Categories",category.Id)" class="btn btn-primary">
                                <i class="fas fa-edit mr-1"></i> 
                                Edit
                            </a>
                            <button data-id="@category.Id" class="deleteButton btn btn-danger">
                                <i class="fas fa-trash-alt mr-1"></i> 
                                Delete
                            </button>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    if (Model.Pager!=null && Model.Pager.TotalPages>1)
    {
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                @if (Model.Pager.CurrentPage == 1)
                {
                    <li class="page-item disabled">
                        <a href="#" class="page-link">Previous</a>
                    </li>
                }
                else
                {
                    <li class="page-item">
                        <a href="@Url.Categories(Model.SearchTerm, Model.Pager.CurrentPage - 1, Model.ParentCategoryId)" class="page-link">
                            Previous
                        </a>
                    </li>
                }

                @for (int page = Model.Pager.StartPage; page < Model.Pager.EndPage + 1; page++)
                {
                    var active = page == Model.Pager.CurrentPage ? "active" : string.Empty;
                    <li class="page-item @active">
                        <a href="@Url.Categories(Model.SearchTerm,page,Model.ParentCategoryId)" class="page-link">
                            @page
                        </a>
                    </li>
                }

                @if (Model.Pager.CurrentPage == Model.Pager.EndPage)
                {
                    <li class="page-item disabled">
                        <a href="#" class="page-link">Next</a>
                    </li>
                }
                else
                {
                    <li class="page-item">
                        <a href="@Url.Categories(Model.SearchTerm,Model.Pager.CurrentPage+1,Model.ParentCategoryId)" class="page-link">
                            Next
                        </a>
                    </li>
                }
            </ul>
        </nav>
    }
    <script>
        $("deleteButton").click(function () {
            var recordId = $(this).attr("data-id");

            swal({
                title:"Are you sure you want to delete this record?",
                icon:"warning",
                buttons:true,
                dangerousMode:true,
            })
            .then((willDelete)=>{
                if(willDelete){
                    $("#dtloader").show();
                    $("#response-holder").hide();

                    $.ajax({
                        url:"@Url.DeleteAction("Categories")",
                        type:"post",
                        data:{id:recordId}
                    })
                    .done(function(response){
                        if (response!=null && response.Success!=undefined && response.Success) {
                            window.location.reload();
                        }
                        else{
                            swal("Error!",response.Message,"error");
                        }
                    });
                }
            });
        });
    </script>
}
else
{
    <div class="alert alert-warning" role="alert">
        No Categories found.
    </div>
}